{
  "ConnectionStrings": {
    "DefaultConnection": "Server=mssql-server,1433;Database=TimeManager_API;User Id=sa;Password=Password.1234"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./logs/timemanagerAPI.log",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:yyy-MM-dd HH:mm:ss.fff zzz} {CorrelationId} {Level:u3} {Username} {Message:lj}{Newline}{Exception}]"
        }
      }
    ]
  }
}
